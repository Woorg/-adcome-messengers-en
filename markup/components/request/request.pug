

mixin request-en(data)
    .request
        .request__container.container
            .request__w
                .request__entry
                    h2.request__title.title.title_reg Contact us and discuss the project

                    .request__text We will advise on all issues


                a.request__button.button.button_filled_white(href="#request") Discuss the project


                != pugHelpers.Icon.call(locals, {iconName: 'request-icon', className: 'request__icon'})

                picture.request__image
                    source(type="image/webp", srcset="static/img/general/placeholder-image.webp", data-srcset="static/img/general/request-image@2x.webp")
                    source(type="image/png", srcset="static/img/general/placeholder-image.png", data-srcset="static/img/general/request-image@2x.png")
                    img.lazy.lazy(width="380" height="294" src="static/img/general/placeholder-image.webp", alt="Изображение", data-src="static/img/general/request-image@2x.png")

        != pugHelpers.Icon.call(locals, {iconName: 'request-bg', className: 'request__bg'})



mixin request-second-en(data)
    section.request.request_second&attributes(attributes)#request
        .request__container.container

            .request__w
                .request__entry
                    h2.request__title.title Shall we begin?
                    .request__text
                        p Let's think through a CRM marketing system with which you improve your competitiveness.
                        p Email communication is the most important link here.


                form.request__form.form.form_en
                    .form__row
                        .form__field
                            input.form__input(type="text" name="Name" value="" placeholder="Name")
                        .form__field
                            input.form__input.form__input_phone(type="text" name="Phone" value="" placeholder="Phone")


                    .form__bottom
                        input.form__submit.button(type="submit" value="Discuss the project")

                        .form__note By clicking the "discuss project" button, you agree to the personal data processing policy.
